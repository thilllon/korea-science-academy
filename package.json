  "scripts": {
    "test": "jest",
    "dev": "tsx src/index.ts",
    "build:tsc": "tsc",
    "build": "tsup",
    "prepare": "husky install && chmod +x .husky/*",
    "format": "prettier --write --list-different .",
    "release": "pnpm format && pnpm build && release-it"
